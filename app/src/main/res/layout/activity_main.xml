<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="trannguyentanthuan.sqlite2903.MainActivity">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Nhập Họ tên"
        android:ems="10"
        android:id="@+id/editTextHoTen"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Thêm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextNamSinh"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp"
        android:id="@+id/button" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp"
        android:id="@+id/listViewHocSinh" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editTextNamSinh"
        android:hint="Nhập Năm Sinh"
        android:layout_below="@+id/editTextHoTen"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Xóa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonXoa"
        android:layout_above="@+id/listViewHocSinh"
        android:layout_toRightOf="@+id/button"
        android:layout_toEndOf="@+id/button"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp" />

    <Button
        android:text="Cập Nhật"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/listViewHocSinh"
        android:layout_toRightOf="@+id/buttonXoa"
        android:layout_toEndOf="@+id/buttonXoa"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:id="@+id/buttonCapNhat" />
</RelativeLayout>
